<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:text="Por favor seleccione un archivo"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#ffffff"/>
    <Button
        android:layout_width="240dp"
        android:id="@+id/buttondzz"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="152dp"
        android:text="Seleccione Archivo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="208dp"
        android:text="Por favor seleccione una ruta para Almacenar el archivo  "
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/buttonrdzz"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Seleccione Ruta" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="49dp"
        android:text="Descifrado ZigZag"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:textColor="#ffffff"/>

</RelativeLayout>